<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cvContacto"
    card_view:cardCornerRadius="@dimen/cvCornerRadious"
    android:layout_marginBottom="@dimen/cvMarginButton">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/cvIvWidth"
            android:layout_height="@dimen/cvIvHeight"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/cvIvMargin"
            android:id="@+id/cvFotoContacto"
            android:src="@drawable/aziani_jayden_jaymes_0640"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/cvNombreContacto"
                android:text="Jayden Jaymes"
                android:textAlignment="center"
                android:textSize="@dimen/cvNombreContacto"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cvTelefonoContacto"
                android:text="55512345"
                android:textAlignment="center"
                android:textSize="@dimen/cvTelefonoContacto"/>
            <ImageButton
                android:layout_width="@dimen/heart"
                android:layout_height="@dimen/heart"
                android:layout_marginTop="@dimen/heartMarginTop"
                android:id="@+id/cvContactoLike"
                android:background="@drawable/like_filled_96"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>